{
  "name": "@bluedot/security-middleware",
  "version": "0.1.0",
  "description": "Drop-in security linting middleware for Node/Next dev and staging.",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "dev:test": "NODE_ENV=test jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "security",
    "middleware",
    "headers",
    "cors",
    "linting",
    "nextjs",
    "express"
  ],
  "author": "Bluedot",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "next": "^15.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.5",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./node": {
      "import": "./dist/index.node.js",
      "require": "./dist/index.node.js"
    }
}

}
