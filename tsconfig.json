{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ES2022",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": ["src", "tests"]
  }
  